<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DesktopClient.ViewModels" xmlns:converter="clr-namespace:DesktopClient.Converter">
    <converter:BooleanToVisibilityConverter x:Key="BoolToVis"/>
    <converter:ByteToImageSourceConverter x:Key="ImageConverter"/>

    <Style TargetType="{x:Type TextBox}">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="FontFamily" Value="Microsoft Sans Serif"/>
    </Style>


    <Style TargetType="{x:Type PasswordBox}">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="Padding" Value="4"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="FontFamily" Value="Microsoft Sans Serif"/>
    </Style>

