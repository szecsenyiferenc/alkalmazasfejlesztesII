@model PictureViewer.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="login-root">

    <div class="login-title">Welcome to the Picture Viewer!</div>

    @using (Html.BeginForm("Create", "Login", FormMethod.Post, new { @class = "login-form" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Customer.Username)
            @Html.TextBoxFor(m => m.Customer.Username, new { @class = "form-control login-input" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Customer.Password)
            @Html.PasswordFor(m => m.Customer.Password, new { @class = "form-control login-input" })
        </div>
        <div>
            @Html.AntiForgeryToken()
            <button class="btn btn-primary" type="submit">Sign In</button>
        </div>

    }

    <button class="btn btn-primary button-style" type="button">
        @Html.ActionLink("Register", "Index", "Register")
    </button>


    @if (Model != null && Model.Failed)
    {
        <div class="alert alert-danger" style="margin: 8px;">Wrong username or password</div>
    }

</div>
