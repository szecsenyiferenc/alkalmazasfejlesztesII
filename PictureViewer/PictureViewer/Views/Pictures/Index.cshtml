@model PictureViewer.ViewModels.PicturesViewModel
@{
    ViewData["Title"] = "Index";
}
<div>
    @Html.Partial("_NavBar", Model.Customer)
    <div class="picture-container">
        @foreach (var picture in Model.Pictures)
        {
        <a href="@Url.Action("Details", "SinglePicture", new { id = picture.Id })">
            <img class="picture" src="data:image;base64,@System.Convert.ToBase64String(picture.Image)" />
        </a>
        }
    </div>
</div>
